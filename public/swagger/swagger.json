{
    "swagger": "2.0",
    "info": {
        "title": "Project Product",
        "description": "Getting started with Project Product",
        "termsOfService": "",
        "contact": {
            "email": "tuanlv2@vnext.com.vn"
        },
        "version": "1.0.0"
    },
    "host": "127.0.0.1:8000",
    "basePath": "/",
    "schemes": [
        "http","https"
    ],
    "paths": {
        "/api/produc/list": {
            "get": {
                "tags": [
                    "Projects"
                ],
                "summary": "Get list product",
                "description": "Returns product data",
                "operationId": "getListProduct",
                "parameters": [
                    {
                        "name": "per_page",
                        "in": "query",
                        "description": "Number record in a page ",
                        "type": "integer",
                        "minimum": "1"
                    },
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                },
                "security": [
                    {
                        "oauth2_security_example": [
                            "write:projects",
                            "read:projects"
                        ]
                    }
                ]
            }
        },
        "/api/produc/list/{id}": {
            "get": {
                "tags": [
                    "Projects"
                ],
                "summary": "Get product by id",
                "description": "Returns product data",
                "operationId": "getProductById",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Enter id",
                        "required": true,
                        "type": "integer"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                },
                "security": [
                    {
                        "oauth2_security_example": [
                            "write:projects",
                            "read:projects"
                        ]
                    }
                ]
            }
        },
        "/api/product/add": {
            "post": {
                "tags": [
                    "Projects"
                ],
                "summary": "Add a product",
                "description": "Returns product data",
                "operationId": "createProduct",
                "produces": "application/json",
                "consumes": "multipart/form-data",
                "parameters": [
                    {
                        "name": "name",
                        "in": "formData",
                        "required": true,
                        "type": "string",
                    },
                    {
                        "name": "image",
                        "in": "formData",
                        "required": true,
                        "type": "file",
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                },
                "security": [
                    {
                        "oauth2_security_example": [
                            "write:projects",
                            "read:projects"
                        ]
                    }
                ]
            }
        },
        "/api/product/{id}":{
            "delete":{
                "tags":[
                    "Projects"
                ],
                "summary": "Delete a product",
                "description":"Returns product data",
                "operationId": "apiDeleteProduct",
                "parameters":[{
                    "name": "id",
                    "in":"path",
                    "required":true,
                    "type":"integer"
                }],
                "responses":{
                    "200":{
                        "description" : "Delete successfully"
                    }
                }
            }
        },
        "/api/product/update/{id}":{
            "put":{
                "tags":[
                    "Projects"
                ],
                "summary": "Update product",
                "description":"Update product",
                "operationId":"updateProduct",
                "parameters":[
                    {
                        "name":"id",
                        "in":"path",
                        "required":true,
                        "type":"integer",
                        
                    },
                    {
                        "name":"body",
                        "in":"body",
                        "required":true,
                        "schema":{
                            "$ref":"#/definitions/Product"
                        }
                    }
                ],
                "responses":{
                    "200":{
                        "description" : "Update successfully"
                    }
                },
                "security": [
                    {
                        "oauth2_security_example": [
                            "write:projects",
                            "read:projects"
                        ]
                    }
                ]
            }
        }

    },
    "definitions": {
        "Products":{
            "type":"object",
            "properties":{
                "id":{
                    "type":"integer",
                    "format": "int64"
                },
                "name":{
                    "type":"string"
                },
                "image":{
                    "type":"string"
                }
            },
            "xml":{
                "name":"Products"
            }
        },
        "Product":{
            "type":"object",
            "properties":{
                "name":{
                    "type":"string"
                },
                "image":{
                    "type":"string"
                }
            },
            "xml":{
                "name":"Product"
            }
        }

    }
}